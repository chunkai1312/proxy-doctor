{
  "git": {
    "commitMessage": "chore: release v${version}",
    "requireBranch": "main",
    "requireCleanWorkingDir": true,
    "tagName": "v${version}"
  },
  "github": {
    "release": true,
    "releaseName": "v${version}"
  },
  "npm": {
    "publish": false
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": "angular",
      "infile": "CHANGELOG.md",
      "header": "# Changelog"
    }
  },
  "hooks": {
    "before:init": ["npm run build"]
  }
}
